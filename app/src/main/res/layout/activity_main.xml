<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="1080px"
        android:layout_height="1920px"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        >


        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            app:srcCompat="@drawable/avenged"
            tools:srcCompat="@drawable/avenged" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeje Deavin"
            android:textSize="24sp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universitas Teknologi Yogyakarta"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fb"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textSize="20sp"
                android:background="@android:color/holo_blue_dark"/>

            <Button
                android:id="@+id/ig"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/holo_red_light"/>


        </LinearLayout>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/mp4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/play"
                android:textSize="24sp" />

            <Button
                android:id="@+id/pause"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pause"
                android:textSize="24sp" />

            <Button
                android:id="@+id/stop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stop"
                android:textSize="24sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avenged Sevenfold - Afterlife"
            android:textSize="25sp"
            android:layout_marginLeft="43dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>